{
    "description" : "Build a Debian 10 VM",
    "variables" : {
        "proxmox_host" : "",
        "proxmox_api_user" : "",
        "proxmox_api_password" : ""
    },
    "builders" : [
        {
            "type" : "proxmox",
            "proxmox_url" : "https://{{ user `proxmox_host` }}:8006/api2/json",
            "insecure_skip_tls_verify" : true,
            "username" : "{{ user `proxmox_api_user` }}",
            "password" : "{{ user `proxmox_api_password` }}",
            "node" : "proxmox",
            "iso_storage_pool" : "local",
            "iso_url" : "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.4.0-amd64-netinst.iso",
            "iso_checksum" : "ab3763d553330e90869487a6843c88f1d4aa199333ff16b653e60e59ac1fc60b",
            "iso_checksum_type" : "sha256",
            "pool" : "templates",
            "vm_name" : "debian-10-template",
            "template_name" : "debian-10-template",
            "template_description" : "Debian 10.4.0 amd64",
            "os" : "l26",
            "cpu_type" : "kvm64",
            "sockets" : 1,
            "cores" : 2,
            "memory" : 2048,
            "vga" : {
                "type" : "std",
                "memory" : 512
            },
            "network_adapters" : [
                {
                    "bridge" : "vmbr0",
                    "model" : "e1000"
                }
            ],
            "scsi_controller" : "virtio-scsi-pci",
            "disks" : [
                {
                    "storage_pool" : "local-zfs",
                    "storage_pool_type" : "zfspool",
                    "type" : "scsi",
                    "disk_size" : "10G",
                    "cache_mode" : "none",
                    "format" : "raw"
                }
            ],
            "unmount_iso" : true,
            "qemu_agent" : true,
            "http_directory" : "preseed",
            "boot_wait" : "10s",
            "boot_command" : [
              "<esc>",
              "<wait>",
              "linux ip=dhcp inst.sshd inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
              "<enter>"
            ],
            "communicator" : "ssh",
            "ssh_username" : "centos",
            "ssh_password" : "packer",
            "ssh_timeout"  : "15m"
        }
    ]
}
